<?xml version="1.0"?>
<clickhouse>
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <max_partitions_per_insert_block>100</max_partitions_per_insert_block>
        </default>

        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>

    <users>
        <default>
            <password></password>
            <networks incl="networks" replace="replace">
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>

        <!-- Analytics user for nginx log analysis -->
        <analytics_user>
            <password>analytics_password</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
            <grants>
                <query>GRANT ALL ON nginx_analytics.*</query>
                <query>GRANT CREATE DATABASE ON *.*</query>
                <query>GRANT DROP DATABASE ON *.*</query>
            </grants>
        </analytics_user>

        <!-- Grafana user -->
        <grafana_user>
            <password>grafana_password</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>readonly</profile>
            <quota>default</quota>
            <grants>
                <query>GRANT SELECT ON nginx_analytics.*</query>
                <query>GRANT SELECT ON system.*</query>
            </grants>
        </grafana_user>

        <!-- Superset user -->
        <superset_user>
            <password>superset_password</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>readonly</profile>
            <quota>default</quota>
            <grants>
                <query>GRANT SELECT ON nginx_analytics.*</query>
                <query>GRANT SELECT ON system.*</query>
            </grants>
        </superset_user>
    </users>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>